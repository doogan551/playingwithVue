        style.
            /*.k-grid tbody tr {*/
            /*cursor: move;*/
            /*}*/
            .hint {
                border: 2px solid #2db245;
                border-radius: 6px;
            }
            .k-grid-header{
                display:none;
            }
            .k-widget{
                border-color: #c5c5c5;
                border:none;
            }
            .k-grid-content{
                overflow-y: hidden;
            }
            .placeholder {
                background-color: #dceffd;
                color: #52aef7;
                text-align: right;
            }

            .well {
                padding: 9px;
                padding-left: 25px;
                padding-right: 25px;
                margin-bottom: 5px;
                /*background-color: #7BA1B5;*/
                border: 1px solid #e3e3e3;
            }

            .well-sm {
                padding: 1px;
            }

            .nav-pills > li.active > a, .nav-pills > li.active > a:hover, .nav-pills > li.active > a:focus {
                color: #fff;
                background-color: #041523;
            }

            a {
                color: #041523;
                text-decoration: none;
            }

            .nav > li > a {
                padding: 3px 14px;
            }

            html,body{background-color:#6b9355;}
            body{
                padding:5px;
            }

            .k-widget > .k-tooltip > .k-tooltip-validation > .k-invalid-msg{
                margin:-1em;

            }
            .k-grid td{
                padding:0;

            }
