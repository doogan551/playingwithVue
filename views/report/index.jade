        #window
            .container
                ul#tabs.well.well-sm.nav.navbar-danger.nav-pills
                    li.active
                        a.btn.btn-md(href="#tabConfiguration",data-toggle="tab", role="tab")
                            i.fa.fa-cogs
                            | &nbsp;Configuration
                    li
                        a.btn.btn-md(href="#tabPreview",data-toggle="tab", role="tab")
                            i.fa.fa-file
                            | &nbsp;Report Preview
                    li
                        a.btn.btn-md(href="#tabDesign", data-toggle="tab", role="tab")
                            i.fa.fa-wrench
                            | &nbsp;Design Report
                .tab-content
                    #tabConfiguration.well.tab-pane.active
                        br
                        //br
                        .row.form-horizontal
                            .form-group.clearfix
                                label.col-sm-1.control-label(for="reportTitle") Title
                                .col-sm-11
                                    input#reportTitle.form-control(required, type="text", placeholder="Specify Report Title", style="width:100%")
                        .row.clearfix
                            .col-xs-5
                                label Columns
                                .row
                                    #columnGrid
                            .col-xs-1(style="margin-left:-80px")
                            .col-xs-6(style="width:56%")
                                label Filters
                                .row
                                    #filterGrid
                        br
                        br
                        .row.clearfix
                            label Options
                            .checkbox
                                label
                                    input#includeFilter(type="checkbox")
                                    | Include filter criteria at the end of the Report
                            .checkbox
                                label
                                    input#includeReportName(type="checkbox")
                                    | Include report name at the end of the Report
                        .row.clearfix
                            .col-xs-3
                            .col-xs-9
                                button#getData Undo
                                button#saveReport Save
                                button#scheduleReport Schedule Report
                                button#runReport Run Report
                        .row
                            br
                            br
                        .row
                            #message.alert(role="alert")
                        .row
                            #gridData
                            #gridData2
                        form#runReportForm(method="post", target="reportPreview")
                            input#params(type="hidden", name="params", value="Soven")
                        include ./models/scheduleReport
                    #tabPreview.well.well-sm.tab-pane
                        iframe#reportPreview(name="reportPreview", frameborder="", scrolling="no")
                    #tabDesign.well.well-sm.tab-pane
                        iframe#reportDesign(name="reportDesign", frameborder="", scrolling="no")
