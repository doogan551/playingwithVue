#userFilterModal.modal-userFilter.modal.fade(data-refresh='true')
    form.userFilter
        .modal-dialog
            .modal-content
                .modal-header
                    .btn.waves-effect.waves-light.right.blue-grey.closeIt.close(data-bind="click: cancelUserNameFilter") Ã—
                    h5.modal-title Filter by User
                .modal-body
                    .container
                        //.title
                        //    span Filter by User
                        //        i.fa.fa-2x.fa-times.closeIt(data-bind="click: cancelUserNameFilter")
                        //    div
                        //    br(clear="all")
                        .header(style="display: inline-block;")
                            .colSelect.col.s1
                                input(type="checkbox" data-bind="checkedValue: $data, checked: checkAllNames")
                                input.medium.filled-in(data-bind="checkedValue: $data, checked: checkAllNames, attr: { id: 'checkForAllNames' }", type="checkbox")
                                label.blue-grey-text(data-bind="attr: { for: 'checkForAllNames' }")
                            .colPhoto.col.s4
                                | Photo
                            .colUserName.col.s6
                                | User
                        .usernamesFilter.thinScroll(style="height:250px;overflow-y:auto;")
                            table
                                tbody(data-bind="foreach: filteredUsers()")
                                    tr(data-bind="click: $root.selectRow, css: { selectedRow: $data.isSelected  }")
                                        td.colSelect.col.s1
                                            input.medium.filled-in(data-bind="click: function () { return $root.userFilterClick($element, $index()) }, checked: $data.isSelected, attr: { id: 'userSelected_' + $index()}", type="checkbox")
                                            label.blue-grey-text(data-bind="attr: { for: 'userSelected_' + $index()}")
                                        td.colPhoto.col.s4
                                            //span.selectable(data-bind="text: Photo.Value")
                                            img(data-bind='attr: { src: "/img/users/" + (Photo.Value.length > 0 ? Photo.Value : "userLarge.png")}', style='width: 24px;margin-right: 8px;float: left;position: relative;top: -6px;')
                                        td.colUserName.col.s6
                                            span.selectable(data-bind="text: username")
                            br(clear="all")
                .modal-footer.okCancel.text-center.userNameFilterFooter
                    button.btn.waves-effect.waves-light.blue-grey.closeIt(data-bind="click: clearUsernameFilter") Clear
                    button.btn.waves-effect.waves-light.blue-grey.closeIt(data-bind="click: applyUserNameFilter, css: { disabled : !dirtyUsernameFilter() }") OK

