							.ui-bar.ui-bar-c Default Value
						.ui-block-d
							.ui-bar.ui-bar-c Type
					#rows.ui-grid-c
						.ui-block-a
							.ui-bar.ui-bar-c name1
						.ui-block-b
							.ui-bar.ui-bar-c The first name segment of the folder name.
						.ui-block-c
							.ui-bar.ui-bar-c Required
						.ui-block-d
							.ui-bar.ui-bar-c String
					#rows.ui-grid-c
						.ui-block-a
							.ui-bar.ui-bar-c name2
						.ui-block-b
							.ui-bar.ui-bar-c The second name segment of the folder name.
						.ui-block-c
							.ui-bar.ui-bar-c empty("")
						.ui-block-d
							.ui-bar.ui-bar-c String
					#rows.ui-grid-c
						.ui-block-a
							.ui-bar.ui-bar-c name3
						.ui-block-b
							.ui-bar.ui-bar-c The third name segment of the folder name.
						.ui-block-c
							.ui-bar.ui-bar-c empty("")
						.ui-block-d
							.ui-bar.ui-bar-c String
					#rows.ui-grid-c
						.ui-block-a
							.ui-bar.ui-bar-c name4
						.ui-block-b
							.ui-bar.ui-bar-c The fourth name segment of the folder name.
						.ui-block-c
							.ui-bar.ui-bar-c empty("")
						.ui-block-d
							.ui-bar.ui-bar-c String

				.tableheading(data-role='collapsible', data-content-theme='a')
					h3 Returned Object
					#columnheaders.ui-grid-c
						.ui-block-a
							.ui-bar.ui-bar-c Name
						.ui-block-b
							.ui-bar.ui-bar-c Summary
						.ui-block-c
							.ui-bar.ui-bar-c Default Value
						.ui-block-d
							.ui-bar.ui-bar-c Type
					#rows.ui-grid-c
						.ui-block-a
							.ui-bar.ui-bar-c message
						.ui-block-b
							.ui-bar.ui-bar-c A message explaining the outcome of the operation
						.ui-block-c
							.ui-bar.ui-bar-c Success
						.ui-block-d
							.ui-bar.ui-bar-c String

				.exampleheading(data-role='collapsible', data-content-theme='a')
					h3 Examples
					#examplearea
						#examplesummary
						.exampleIn(data-role='collapsible', data-content-theme='b', data-mini='true')
							h3 Example in:
							.codesnippet
								{ name1: '002', name2: 'abc', name3: 'thisisatest' }
