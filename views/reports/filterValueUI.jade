// ko if: (valueType === "UniquePID")
div.pointreference
   button.btn.btn-danger.btn-xs.fa.fa-times(data-bind="click: function(){ $parent.clearFilterPoint($index()) }, tooltip: { title: 'Clear' }")
   button.btn.btn-info.btn-xs.fa.fa-pencil(data-bind="click: function(){ $parent.selectPointForFilter($data, $index) }, tooltip: { title: 'Edit' }")
   .pointRef.filterPointName.container-fluid.filterContainer(data-bind="text: ($data.value !== 0 ? $data.value : '- blank -'), click: function(){ $parent.showPointReview($data) }")
// /ko
// ko if: (valueType === "Bool")
.dropdown.availablefilterValues
   button.btn.btn-default.dropdown-toggle.filterValueButton(data-toggle="dropdown")
      span(data-bind="text: $root.displayBool(value)")
      span.caret.lm10px
   ul.filterValues.dropdown-menu
      li
         a.filterContainer(data-bind="click: function(){ $root.setFilterConfig($index(), {value: 'True'}, 'value') }, text: 'On'", required)
      li
         a.filterContainer(data-bind="click: function(){ $root.setFilterConfig($index(), {value: 'False'}, 'value') }, text: 'Off'", required)
