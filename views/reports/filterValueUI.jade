input.input.form-control.filterContainer(data-bind="value: value, enable: $root.canEdit()", type="number", required)
// /ko
// ko if: (valueType === "String")
input.input.form-control.filterContainer(data-bind="value: value, enable: $root.canEdit()", type="text", required)
