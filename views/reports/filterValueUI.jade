// ko if: (valueList.length > 0)
.dropdown.availablefilterValues
   button.btn.btn-default.dropdown-toggle.filterValueButton(data-toggle="dropdown")
      span(data-bind="text: value")
      span.caret.lm10px
   ul.filterValues.dropdown-menu
      // ko foreach: valueList
      li
         a.filterContainer(data-bind="click: function(){ $root.selectedFilterEValue($parentContext.$index(), $data) }, text: $data.value", required)
      // /ko
// /ko
// ko if: (valueList.length === 0)
input.input.form-control.filterContainer(data-bind="value: value", type="text", required)
