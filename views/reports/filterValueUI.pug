// ko if: (valueList.length > 0)
.dropdown.availablefilterValues(data-bind="css: {disabled: !$root.canEdit()}")
   a.btn-flat.waves-effect.waves-light.blue-grey.dropdown-toggle.filterValueButton(data-bind="css: {disabled: !$root.canEdit()}", data-toggle="dropdown")
      span(data-bind="text: value")
      span.caret.lm10px
   ul.filterValues.dropdown-menu
      // ko foreach: valueList
      li
         a.filterContainer(data-bind="click: function(){ $root.selectedFilterEValue($parentContext.$index(), $data) }, text: $data.value", required)
      // /ko
// /ko
// ko if: (valueList.length === 0)
input.input.form-control.filterContainer(data-bind="value: value, enable: $root.canEdit()", type="text", required)
// /ko
