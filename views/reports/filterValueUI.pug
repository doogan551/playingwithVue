// ko if: ((valueType === "DateTime" || valueType === "Timet"))
div(style="display:inline-block")
   input.input.form-control.filterContainer.dateTimeDate(data-bind="reportDatePicker: date, enable: $root.canEdit(), css: {startDate: (filterName === 'Start_Date'), endDate: (filterName === 'End_Date') }", type="text", required)
div(style="display:inline-block")
   input.input.form-control.filterContainer.dateTimeTime(data-bind="reportTimePicker: time, enable: $root.canEdit(), css: {startDateTime: (filterName === 'Start_Date'), endDateTime: (filterName === 'End_Date') }", type="text", required)
// /ko
// ko if: (valueType === "Float" || valueType === "Unsigned")
input.input.form-control.filterContainer(data-bind="value: value, enable: $root.canEdit()", type="number", required)
// /ko
// ko if: (valueType === "String")
input.input.form-control.filterContainer(data-bind="value: value, enable: $root.canEdit()", type="text", required)
