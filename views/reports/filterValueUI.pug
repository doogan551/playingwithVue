div.durationCtrl
   // ko if: ((valueType === "HourMinSec") || (valueType === "HourMin"))
   input.hr(data-bind="value: hours, enable: $root.canEdit()", type="number", min="0", max="23")
   span.timeSeg hr
   // /ko
   input.min(data-bind="value: minutes, enable: $root.canEdit()", type="number", min="0", max="59")
   span.timeSeg min
   // ko if: ((valueType === "HourMinSec") || (valueType === "MinSec"))
   input.sec(data-bind="value: seconds, enable: $root.canEdit()", type="number", min="0", max="59")
   span.timeSeg sec
   // /ko
