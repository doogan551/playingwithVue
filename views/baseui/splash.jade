doctype html
html
	head
		title= title
		link(rel='stylesheet', href='/css/lib/font-awesome-4.0.3/css/font-awesome.min.css')
		link(rel='stylesheet', href='/css/lib/bootstrap.3.0.2.min.css')
		link(rel='stylesheet', href='/css/baseui/workspace.css')
		link(rel='stylesheet', href='/css/baseui/splash.css')
		script(type='text/javascript', src='/js/lib/json2.js')
		script(type='text/javascript', src='/js/lib/jquery.min.js')
		script(type='text/javascript', src='/js/lib/knockout-2.3.0.js')
		script(type='text/javascript', src='/js/lib/bootstrap-3.0.3.min.js')
		script(type='text/javascript', src='/js/lib/ko.validation.js')
		script(type='text/javascript', src='/js/lib/date.js')
		script(type='text/javascript', src='/js/lib/underscore.js')
		script(type='text/javascript', src='/js/lib/backbone.min.js')
		script(type='text/javascript', src='/js/lib/knockback.min.js')
		script(type='text/javascript', src='/js/lib/ko.validation.js')
		script(type='text/javascript', src='/js/lib/typeahead.bundle.js')
		script(type='text/javascript', src='/js/lib/handlebars-v3.0.3.js')
		script(type='text/javascript', src='/js/baseui/splash.js')

	body.view
		#splash
			.masthead
				form(action='')
					input(type='hidden' name='mode', value='results')
					.spacerDiv
					#searchArea.typeahead
						.u-posRelative
							input.searchHint(tabindex=-1 type='text' readonly)
							input.searchBar(tabindex=1)
							i.fa.fa-search.searchIcon
							i.fa.fa-times-circle.clearIcon(data-bind='click: clearSearch', title="Clear")
							img.searchSpinner(src='/img/spinner.gif')
						.searchMenu


			ul.thumbs.alarms(data-bind="foreach: alarms")
				li.thumb(data-bind="css:name")
					.titleBar
						.title(data-bind="text:name")

					.thumbContent.active
						.count(data-bind="text:count")

			script#template(type='text/x-handlebars-template')
				.dropdownResults
					.resultName {{Name}}
					.resultType {{pointType}}

			script#noResults(type='text/x-handlebars-template')
				.dropdownResults
					.resultName Unable to find any results
