h5 Present Value
.row
.container.well.well-sm
    .row
        .form-group
            .col-xs-12
                label Maximum Value
                input.input-medium(type='text', data-bind='event: { keyup: changeVal.bind($data,\'Maximum Value\') },value:getSelectedDProp(\'Maximum Value\')')
        .form-group
            .col-xs-12
                label Minimum Value
                input.input-medium(type='text', data-bind='event: { keyup: changeVal.bind($data,\'Minimum Value\') },value:getSelectedDProp(\'Minimum Value\')')
    .row
        label.col-xs-12.control-label
            |Output Delay Time
    .row
        .form-group
            .col-xs-1
                label Min:
            .col-xs-2
                input#min.form-control.input-sm(name='min', data-bind="event: { change: updateInterval.bind($element, $data,true) }, value:getSelectedDProp('Update Interval') > 60 ? Math.floor(getSelectedDProp('Update Interval') / 60) : 0", min='0', max='60')
            .col-xs-1
                label Sec:
            .col-xs-2
                input#sec.form-control.input-sm(name='sec', data-bind="event: { change: updateInterval.bind($element, $data,false) }, value:getSelectedDProp('Update Interval') % 60", min='0', max='60')
            .col-xs-6
    .row
        .col-xs-6
            .form-group
                label Reset Time
                input.input-medium(type='text', data-bind='event: { keyup: changeVal.bind($data,\'Reset Time\') },value:getSelectedDProp(\'Reset Time\')')
        .col-xs-6
            .form-group
                label Reset Interval:
                select.input-medium(data-bind='event: {change: changeSelect.bind($element, $data,\'Reset Interval\', false) }, options:dropdownRange(\'Reset Interval\'), optionsText: \'key\', optionsValue:\'val\', optionsCaption: \'[Not Selected]\', value:getSelectedDPropEvalue(\'Reset Interval\')')

