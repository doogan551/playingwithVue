h5 Present Value
.container.well.well-sm
    .row
        .col-xs-6
            .form-group
                label Maximum Value
                input.input-medium(type='text', data-bind='event: { keyup: changeVal.bind($data,\'Maximum Value\') },value:getSelectedDProp(\'Maximum Value\')')
            .form-group
                label Minimum Value
                input.input-medium(type='text', data-bind='event: { keyup: changeVal.bind($data,\'Minimum Value\') },value:getSelectedDProp(\'Minimum Value\')')
        .col-xs-6
            .form-group
                label Calculation Type:
                select.input-medium(data-bind='event: {change: changeSelect.bind($element, $data,\'Calculation Type\', true) }, options:dropdownRange(\'Calculation Type\'), optionsText: \'key\', optionsValue:\'val\', optionsCaption: \'[Not Selected]\', value:getSelectedDPropEvalue(\'Calculation Type\')')
            .form-group
                label.checkbox
                    input(type='checkbox', data-bind='event: { click: changeChecked.bind($element, $data, \'Filter\') }, checked:getSelectedDProp(\'Filter\')')
                    | Filter
            .form-group
                label Scale Factor:
                input.input-medium(type='text', data-bind='event: { keyup: changeVal.bind($data,\'Scale Factor\') },value:getSelectedDProp(\'Scale Factor\')')
