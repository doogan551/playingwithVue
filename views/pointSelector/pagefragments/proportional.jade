                    label Proportional Band
                    input.input-medium(type='text', data-bind='event: { keyup: changeVal.bind($data,\'Proportional Band\') },value:getSelectedDProp(\'Proportional Band\')')
                .form-group
                    label Reset Gain
                    input.input-medium(type='text', data-bind='event: { keyup: changeVal.bind($data,\'Reset Gain\') },value:getSelectedDProp(\'Reset Gain\')')
