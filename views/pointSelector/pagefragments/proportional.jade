.row
.container.well.well-sm
    .row
            .col-xs-6
                .form-group
                    label Maximum Value
                    input.input-medium(type='text', data-bind='event: { keyup: changeVal.bind($data,\'Maximum Value\') },value:getSelectedDProp(\'Maximum Value\')')
                .form-group
                    label Minimum Value
                    input.input-medium(type='text', data-bind='event: { keyup: changeVal.bind($data,\'Minimum Value\') },value:getSelectedDProp(\'Minimum Value\')')
                .form-group
                    label
                        b Input Rate:
                    select.input-medium(data-bind='event: {change: changeSelect.bind($element, $data,\'Input Rate\') }, options:dropdownRange(\'Input Rate\'), optionsText: \'key\', optionsValue:\'val\', optionsCaption: \'[Not Selected]\', value:getSelectedDPropEvalue(\'Input Rate\')')
                .form-group
                    label Input Range
                    select.input-medium(data-bind='event: {change: changeSelect.bind($element, $data,\'Input Range\') }, options:dropdownRange(\'Input Range\'), optionsText: \'key\', optionsValue:\'val\', optionsCaption: \'[Not Selected]\', value:getSelectedDPropEvalue(\'Input Range\')')
            .col-xs-6
                .form-group
                    label.checkbox
                        input(type='checkbox', data-bind='event: { click: changeChecked.bind($element, $data, \'Reverse Action\', true) }, checked:getSelectedDProp(\'Reverse Action\')')
