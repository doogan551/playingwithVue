html
	head
		link(rel='stylesheet', type='text/css', href="/css/lib/bootstrap-3.0.3.min.css?ver=0.4.0")
		link(rel='stylesheet', type='text/css', href="/css/lib/font-awesome-4.0.3/css/font-awesome.min.css?ver=0.4.0")
		style.
			body {
				padding: 20px;
			}
			input[type=text] {
				margin-left: 10px;
				padding-left: 5px;
			}
			.propertyContainer {
				display: inline-block;
				padding: 10px;
				margin: 20px;
				background-color: #EEE;
				border-color: #888;
				border-radius: 4px;
				-webkit-transition: all 0.2s ease-in-out;
				transition: all 0.2s ease-in-out;
			}
			.propName {
				font-weight: bold;
				border-bottom: 1px solid #888;
				margin-bottom: 10px;
			}

	body
		input(type="text", data-bind="value: propertyFilter, valueUpdate: 'input'", placeholder="Filter Properties")
		br
		br

		// ko foreach: propertyList
		.propertyContainer
			.propName(data-bind="text: propName")
			// ko foreach: points
			div(data-bind="text: $data")
			// /ko
		// /ko

		script(type='text/javascript', src="/js/lib/jquery.min.js?ver=0.4.0")
		script(type='text/javascript', src="/js/lib/knockout-2.2.0.js?ver=0.4.0")
		script(type='text/javascript', src="/js/lib/bootstrap-3.0.3.min.js?ver=0.4.0")
		script(type='text/javascript', src="/js/lib/config.js?ver=0.4.0")
		script(type='text/javascript', src="/js/toolbag/propertyUsage.js")