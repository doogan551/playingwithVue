doctype html
html
    head
        title
        link(rel='stylesheet', href='/css/lib/bootstrap.3.0.2.min.css?ver=0.4.0')
        link(rel='stylesheet', href='/css/lib/font-awesome-4.0.3/css/font-awesome.min.css?ver=0.4.0')
        style.
            html, body {
                height: 100%;
            }
            body {
                font-size: 13px;
                background: #ccc;
                color: #333;
                margin: 0;
                overflow: hidden;
            }
            .topNav {
                /* override bootstrap */
                border: none;
                border-radius: 0;
                border-top: 1px solid #4FC8EC;
                background: #ccc;
                color: #ccc;
                min-width: 850px;
            }
            #main {
                position: absolute;
                top: 80px;
                bottom: 0;
                left: 0;
                right: 0;
                padding: 0 50px 20px;
                overflow: auto;
            }
            #workspaceTitle {
                margin: 0 0 20px;
                text-transform: uppercase;
                color: #666;
                font-size: 30px;
                text-shadow: 1px 1px 1px rgba(255,255,255, .4);
            }
        script(type='text/javascript', src='/js/lib/jquery-1.9.1.min.js?ver=0.4.0')
        script(type='text/javascript', src='/js/lib/knockout-2.3.0.js?ver=0.4.0')
        script.
            var err = !{err},
            data = !{pageData},
            executeImmediately = true;
    body
        .navbar.navbar-default.topNav
            .container-fluid
                .navbar-header
                    img(src='/img/workspace/infoscanLogoLight.png', width='252', height='47', alt='InfoScan')
        #main
            //h1#workspaceTitle System Thumbnail Generator
            //hr

            div.row
                div.col-fluid.text-center
                    h3#msg Generating Thumbnail...

        script(type='text/javascript', src='/js/thumbnailGenerator/generator.js?ver=0.4.0')
        script.
            $(thumbnailGenerator.init);
