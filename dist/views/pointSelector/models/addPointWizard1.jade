.form-group
    h5 Point Type:
    div#pointTypeSelection
    .row
        .col-xs-3
            #devicePoint
                button.btn.btn-xs.btn-primary#devicePointSelection
                    | Select Device Point
            span#devicePointSpan
                | Device Point
        .col-xs-3
            span#dpName.label.label-lg.label-warning
                !{dpName}
        .col-xs-3
            input#dp(name='dp', type='hidden',value=dp)
        .col-xs-3

