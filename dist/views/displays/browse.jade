extends layout

block content
  script(src='/js/displays/browse.js?ver=0.4.0')
  link(rel='stylesheet', href='/css/displays/main.css?ver=0.4.0')
  link(rel='stylesheet', href='/css/displays/display.css?ver=0.4.0')

  div(style='padding-top:50px;')
    - each file in files
        a(data-role='button',style="display:block;margin:5px;width:140px;height:120px;float:left;",class="file",href="#")
          img(style='display:block;height:70px')
          span(class='fname',style='font-size:8px;') #{file}
  div(class='topBar',style='position: absolute;top:0px;z-index:9999; width: 100%;position:fixed;', data-role='header', data-theme='b')
    h1 Select Image
    a(href='#',data-role='button') Upload
    div(style="position:absolute;right:5px;top:0px;")
      input(type='search',data-mini='true')


block panels